<component name="ca.bc.gov.permissions.record.contribution">

  <require>org.nuxeo.ecm.core.security.defaultPermissions</require>

  <extension target="org.nuxeo.ecm.core.security.SecurityService"
    point="permissions">

    <permission name="Record">

      <include>ReadWrite</include>
      <include>ReadRemove</include>
      <include>AddChildren</include>
      <include>RemoveChildren</include>
      <include>CanAskForPublishing</include>

      <remove>ReadSecurity</remove>

    </permission>

  </extension>

</component>
